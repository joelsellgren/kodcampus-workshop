<h2>Välkommen {{user.username}}</h2>

{{#if paths.length}}
<p>Här är dina startade lärostigar. Lycka till!</p>
{{else}}
<p>Du har inte startat några lärostigar än. Gå till <a href="/">startsidan</a>  och klicka på "Starta" för att komma igång!</p>
{{/if}}

{{#each paths}}

    <div>
        <div class='path'>
            <h3>{{learningPath.title}}</h3>
            <p><b>Steg: <span class="steps-count"></span> | <span class="progress-percent"></span>%</b></p>
            <div class="progress-bar-container">
                <div class="progress-bar"></div>
            </div>
            <p>{{learningPath.description}}</p>

            <ol>
                {{#each learningPath.steps}}
                    <li>
                        <p>
                            {{#if done}}
                            <input
                                type='checkbox'
                                class='complete-step'
                                checked
                                data-step-id='{{_id}}'
                                data-done="true"
                                data-path-id='{{../_id}}'
                            />
                            {{else}}
                            <input
                                type='checkbox'
                                class='complete-step'
                                data-step-id='{{_id}}'
                                data-done="false"
                                data-path-id='{{../_id}}'
                            />
                            {{/if}}
                            <b>{{title}}</b>
                        </p>
                        <p><i>{{description}}</i></p>
                        <p>Link:
                            <a href='{{link}}' target='_blank'>{{link}}</a></p>
                    </li>
                {{/each}}
            </ol>
            <hr />
        </div>
    </div>

{{/each}}